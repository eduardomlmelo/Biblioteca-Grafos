from Grafo import Graph

class Digraph(Graph):

    def __init__(self, num_vertices, weighted = False):
        super().__init__(num_vertices, weighted)



    # Metodo para adicionar aresta ao grafo
    def add_edge(self, u: int, v: int, weight: float = 1) -> None:
        self._validar_vertice(u)
        self._validar_vertice(v)

        # Caso o grafo seja ponderado ser√° atribuido o valor do peso referente a cada aresta
        if not self.weighted:
            weight = 1

        self.adj_list[u].append((v, weight))
        self.adj_list[v].append((u, weight))
